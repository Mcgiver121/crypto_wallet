<p id="notice"><%= notice %></p>
<div style="text-align: center;" class="field">
<strong><h1><%=nome_aplicacao%></h1></strong><%= data_br(Date.today) %>
</div>
<div style="text-align: center;" class="field">
<h1>Coins</h1>
</div>
<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Sigla</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody style="text-align: center;" class="field">
    <% @coins.each do |coin| %>
      <tr>
        <td><%= coin.description %></td>
        <td><%= coin.acronym %></td>
        <td><%= image_tag coin.yrl_image, size:"25x25" %> </td>
        <td><%= link_to 'Show', coin %></td>
        <td><%= link_to 'Edit', edit_coin_path(coin) %></td>
        <td><%= link_to 'Destroy', coin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Coin', new_coin_path %>

<ul>
  <li>
  <%= link_to "Pagina Inicial", welcome_index_path %>
  </li>
</ul>